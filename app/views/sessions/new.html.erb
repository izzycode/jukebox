<div class="form-group">
  <%= form_for :session, url: sessions_path do |f| %>
    <%= f.label :username, 'Enter a username'%><br/>
    <%= f.text_field :username, class: "form-control"%><br/>
    <%= f.submit 'Start chatting', class:"btn btn-md btn-default" %>
  <% end %>
</div><!-- /.form-group -->
