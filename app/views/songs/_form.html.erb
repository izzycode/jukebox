<%= form_for @song, :html => { :class => "form-horizontal song" } do |f| %>

  <% if @song.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :artist, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :artist, :class => 'form-control' %>
    </div>
    <%=f.error_span(:artist) %>
  </div>
  <div class="form-group">
    <%= f.label :bpm, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :bpm, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bpm) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
